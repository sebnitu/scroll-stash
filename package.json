{
  "name": "scroll-stash",
  "description": "A JavaScript plugin to help preserve an element's scroll position.",
  "version": "1.0.13",
  "license": "MIT",
  "keywords": [
    "JavaScript",
    "component",
    "drawer",
    "scroll"
  ],
  "main": "dist/scripts.js",
  "module": "dist/scripts.esm.js",
  "unpkg": "dist/scripts.js",
  "scripts": {
    "build": "npm-run-all clean scripts",
    "clean": "del dist",
    "scripts": "rollup -c",
    "watch": "nodemon -e js -x 'npm run scripts' -i dist",
    "lint": "eslint src/*",
    "lint:fix": "eslint src/* --fix",
    "sink": "npm-run-all build lint test:coverage",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "unreleased": "conventional-changelog --outfile UNRELEASED.md --output-unreleased",
    "preversion": "npm-run-all build lint test",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sebnitu/scroll-stash.git"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "@rollup/plugin-babel": "^5.2.1",
    "@rollup/plugin-commonjs": "^15.0.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@testing-library/jest-dom": "^5.11.4",
    "@vrembem/base": "^1.21.0",
    "@vrembem/dialog": "^1.21.0",
    "@vrembem/menu": "^1.21.0",
    "@vrembem/utility": "^1.22.0",
    "babel-jest": "^26.3.0",
    "concurrently": "^5.3.0",
    "conventional-changelog-cli": "^2.1.0",
    "coveralls": "^3.1.0",
    "del-cli": "^3.0.1",
    "eslint": "^7.9.0",
    "eslint-plugin-jest": "^24.0.1",
    "jest": "^26.4.2",
    "jest-puppeteer": "^4.4.0",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "puppeteer": "5.2.0",
    "rollup": "^2.26.11",
    "rollup-plugin-terser": "^7.0.2"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
