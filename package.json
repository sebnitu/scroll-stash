{
  "name": "scroll-stash",
  "description": "A JavaScript plugin to help preserve an element's scroll position.",
  "version": "1.0.1",
  "license": "MIT",
  "keywords": [
    "JavaScript",
    "component",
    "drawer",
    "scroll"
  ],
  "main": "dist/scripts.cjs.js",
  "module": "src/core.js",
  "browser": "dist/scripts.js",
  "scripts": {
    "build": "npm-run-all clean scripts",
    "clean": "del dist",
    "scripts": "rollup -c",
    "watch": "nodemon -e js -x 'npm run scripts' -i dist",
    "lint": "eslint src/*",
    "lint:fix": "eslint src/* --fix",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "unreleased": "conventional-changelog --outfile UNRELEASED.md --output-unreleased",
    "preversion": "npm-run-all build lint test",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sebnitu/scroll-stash.git"
  },
  "devDependencies": {
    "@babel/core": "^7.11.0",
    "@babel/plugin-transform-runtime": "^7.11.0",
    "@babel/preset-env": "^7.11.0",
    "@rollup/plugin-babel": "^5.0.3",
    "@rollup/plugin-commonjs": "^14.0.0",
    "@rollup/plugin-node-resolve": "^8.0.1",
    "@testing-library/jest-dom": "^5.11.2",
    "@vrembem/base": "^1.12.0",
    "@vrembem/core": "^1.7.2",
    "@vrembem/dialog": "^1.7.3",
    "@vrembem/menu": "^1.7.3",
    "@vrembem/utility": "^1.12.0",
    "babel-jest": "^26.2.1",
    "concurrently": "^5.2.0",
    "conventional-changelog-cli": "^2.0.34",
    "coveralls": "^3.1.0",
    "del-cli": "^3.0.1",
    "eslint": "^7.6.0",
    "eslint-plugin-jest": "^23.20.0",
    "jest": "^26.2.2",
    "jest-puppeteer": "^4.4.0",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "puppeteer": "5.2.0",
    "rollup": "^2.16.1",
    "rollup-plugin-terser": "^6.1.0"
  },
  "dependencies": {
    "lodash.isempty": "^4.4.0",
    "lodash.throttle": "^4.1.1"
  }
}
